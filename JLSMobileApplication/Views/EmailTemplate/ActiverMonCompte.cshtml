@{

    ViewBag.Title = "Félicitation! Vous avez bien créé votre compte";
    Layout = "~/Views/EmailTemplate/_Layout.cshtml";
}


<table width="95%" border="0" align="center" cellpadding="0" cellspacing="0">
    <tr>
        @*<td width="40%" align="center" valign="middle" style="padding:10px;">
            @Html.Partial("_logo.cshtml")
        </td>*@
        <td align="left" valign="middle" style="color:#525252; font-family:Arial, Helvetica, sans-serif; padding:10px;">
            <div style="font-size:16px;">
                Chère cliente, cher client @Model.Username,
            </div>
            <div style="font-size:12px;">
                Merci de votre inscription.
                Veuiller cliquer le boutton pour activer votre compte.
                Vous n'allez pas demander de login sur votre compte, cette action est uniquement pour vérifier l'existant de votre addresse mail
                <hr>
                <center>

                    @*<button type="button" title="Activer votre compte" style="background: #1b97f1">*@
                        <a href="@Model.ConfirmationLink" style="font-size:22px; padding: 10px;">
                            Activer votre compte
                        </a>
                    @*</button>*@

                </center>
            </div>
        </td>
    </tr>
</table>
<table width="100%" border="0" cellspacing="0" cellpadding="0">
    <tr>
        <td align="center" valign="middle" style="padding:5px;">
            @*<img src="cid:Logo.jpg" width="566" height="30">*@
        </td>
    </tr>
</table>
<table width="100%" border="0" align="center" cellpadding="0" cellspacing="0" style="margin-bottom:15px;">
    <tr>
        <td align="left" valign="middle" style="padding:15px; font-family:Arial, Helvetica, sans-serif;">
            <div style="font-size:20px; color:#564319;">
                <b>Votre compte est valable pour notre site et notre application JLS IMPORT </b>
            </div>
            <div style="font-size:16px; color:#525252;">
                <b>Addresse mail:</b> @Model.Username
                <br />
                <b>Entreprise:</b> @Model.Entreprise
                <br />
                <b>Numéro de téléphone:</b> @Model.Phone
            </div>
        </td>
    </tr>
</table>
